<?xml version="1.0"?>
<config>
    <modules>
        <Hackathon_Logger>
            <version>0.0.1</version>
        </Hackathon_Logger>
    </modules>
    <admin>
		<routers>
			<adminhtml>
				<args>
					<modules>
						<logger before="Mage_Adminhtml">Hackathon_Logger_Adminhtml</logger>
					</modules>
				</args>
			</adminhtml>
		</routers>
    </admin>
    <adminhtml>
        <menu>
            <logger translate="title" module="hackathon_logger">
                <title>View Error Log</title>
                <sort_order>60</sort_order>
                <children>
                    <viewer module="hackathon_logger">
                        <title>View database log</title>
                        <action>adminhtml/logger/index</action>
                    </viewer>
                </children>
            </logger>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <menu1 translate="title" module="hackathon_logger">
                            <title>View Error Log</title>
                            <sort_order>60</sort_order>
                            <children>
                                <menuitem1>
                                    <title>Logs</title>
                                </menuitem1>
                            </children>
                        </menu1>
                    </children>
                </admin>
            </resources>
        </acl>
		<layout>
			<updates>
				<hackathon_logger>
					<file>hackathon_logger.xml</file>
				</hackathon_logger>
			</updates>
		</layout>
    </adminhtml>
    <global>
		<log>
			<core>
				<writer_model>Hackathon_Logger_Model_Queue</writer_model>
			</core>
		</log>
        <models>
            <hackathon_logger>
                <class>Hackathon_Logger_Model</class>
                <resourceModel>logger_resource</resourceModel>
            </hackathon_logger>
            <logger_resource>
                <class>Hackathon_Logger_Model_Resource</class>
                <entities>
                    <db_entry>
                        <table>advanced_logger</table>
                    </db_entry>
                </entities>
            </logger_resource>
        </models>
        <resources>
            <logger_setup>
                <setup>
                    <module>Hackathon_Logger</module>
                </setup>
            </logger_setup>
        </resources>
        <helpers>
            <hackathon_logger>
                <class>Hackathon_Logger_Helper</class>
            </hackathon_logger>
        </helpers>
		<blocks>
			<hackathon_logger>
				<class>Hackathon_Logger_Block</class>
			</hackathon_logger>
		</blocks>
	</global>
  <default>
    <logger>
      <graylog2>
        <hostname>localhost</hostname>
        <port>12201</port>
        <chunk_size>1420</chunk_size>
      </graylog2>
    </logger>
  </default>
</config>
